<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.test.mapper.PersonMapper">

    <select id="pagePerson" resultType="com.cloud.test.entity.Person">
        select id, person_age, person_name, create_time
        from person
        <where>
            <if test="personName != '' and personName != null " >
              and person_name like concat('%', #{personName} ,'%')
            </if>
        </where>
    </select>

</mapper>
